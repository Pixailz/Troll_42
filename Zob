					SOUND='leroy.swf.mp3'
					lsound_s
					;;
				-)
					lsound2
					;;
				+)
					lsound4
					;;
				m)
					menu
					;;
				q)
					history -c
					clear
					exec zsh
					exit
					;;
		esac
		read -p $'\nPress Enter to continue...' END
	done
}

