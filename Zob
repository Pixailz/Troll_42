{
	clear
	printf "███████╗ ██████╗██████╗ ██╗██████╗ ████████╗     █████╗     ██╗      █████╗     ███████╗ ██████╗ ██████╗\n"
	printf "██╔════╝██╔════╝██╔══██╗██║██╔══██╗╚══██╔══╝    ██╔══██╗    ██║     ██╔══██╗    ╚══███╔╝██╔═══██╗██╔══██╗\n"
	printf "███████╗██║     ██████╔╝██║██████╔╝   ██║       ███████║    ██║     ███████║      ███╔╝ ██║   ██║██████╔╝\n"
	printf "╚════██║██║     ██╔══██╗██║██╔═══╝    ██║       ██╔══██║    ██║     ██╔══██║     ███╔╝  ██║   ██║██╔══██╗\n"
	printf "███████║╚██████╗██║  ██║██║██║        ██║       ██║  ██║    ███████╗██║  ██║    ███████╗╚██████╔╝██████╔╝\n"
	printf "╚══════╝ ╚═════╝╚═╝  ╚═╝╚═╝╚═╝        ╚═╝       ╚═╝  ╚═╝    ╚══════╝╚═╝  ╚═╝    ╚══════╝ ╚═════╝ ╚═════╝ \n"
}

function menu()
{
	while :
	do
		header
		printf "$BLACK"" (i) install \n"
		printf "$W"" (1) ls with sound \n"
		printf " (2) wallpaper changer \n"
		printf " (3) vimkipedia \n"
		printf " (4) lokcd \n"
		printf " (5) coming soon \n"
		printf " (6) credit \n"
		printf " (7) quit \n"
		printf "$BLACK"" (o) rm troll_ohmyzsh | (b) rm troll_bash | (r) rm directory | (a) rm all"
		printf "$W""\n"
		read -p $'Selection : ' -n 1 INPUT
		case $INPUT in
				1)
					lsound1
				;;
				2)
					cp ./downloads/.multipla.jpg ~/Desktop/multipla.jpg
					wallpaper_changer
				;;
				3)
					vimkipedia_s
				;;
				4)
					lokcd_s
				;;
				6)
					multipla
				;;
				7) 
					history -c
					clear
					exec zsh
					exit
				;;
				i)
					echo "alias ttroll101='git clone https://github.com/ripZeide/Troll_42.git'" >> ~/.oh-my-zsh/custom/alias.zsh
					echo "alias troll42='git clone https://github.com/ripZeide/Troll_42.git'" >> ~/.zshrc
					history -c
				;;
				r)
					rm -rf ../Troll_42
					history -c
					clear
					exec zsh
				;;
				a)
					rm -rf ../Troll_42
					rm_to_ohmyzsh
					rm_to_zsh
					history -c
					clear
					exec zsh
				;;
				q)
					history -c
					clear
					exec zsh
					exit
				;;
				o)
					history -c
					rm_to_ohmyzsh
				;;
				b)
					history -c
					rm_to_zsh
				;;
		esac
		read -p $'\nPress Enter to continue...' END
	done
	clear
}

header
read -n 1 -s -r -p "I am ready to take tig, press key..."
clear
menu
