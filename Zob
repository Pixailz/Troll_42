function lsound_max()
{
	i=1

	while [ '$i > 0' ]
	do
		osascript -e "set volume output volume 100"
		i=$[$i+1]
	done
}

function lsound_do_ohmyzsh()
{
	if [ -f ~/.oh-my-zsh/custom/alias.zsh ]
	then
		cp ~/.oh-my-zsh/custom/alias.zsh ~/.oh-my-zsh/custom/.aliassave
	fi
	touch ~/.oh-my-zsh/custom/alias.zsh
	echo "alias ls='(afplay --volume 255 ~/.${SOUND} &) ; ls -G $1'" >> ~/.oh-my-zsh/custom/alias.zsh
	cp ./sound/${SOUND} ~/.${SOUND}
}

function lsound_do_zsh()
{
	if [ -f ~/.zshrc ]
	then
		cp ~/.zshrc ~/.zshrcsave
	fi
	touch ~/.zshrc
	echo "alias ls='(afplay --volume 255 ~/.${SOUND} &) ; ls $1'" >> ~/.zshrc
	cp ./sound/${SOUND} ~/.${SOUND}
}

function rm_to_ohmyzsh()
{
	if [ -f ~/.oh-my-zsh/custom/alias.zsh ]
	then
		rm ~/.oh-my-zsh/custom/alias.zsh
	fi
	if [ -f ~/.oh-my-zsh/custom/.aliassave ]
	then
		mv ~/.oh-my-zsh/custom/.aliassave ~/.oh-my-zsh/custom/alias.zsh
	fi
	if [ -f ~/.*.mp3 ]
	then
		rm ~/.*.mp3
	fi
	if [ -f ~/.vimkipedia ]
	then
		rm ~/.vimkipedia
	fi
	if [ -d ~/.html2text/ ]
	then
		rm -rf ~/.html2text/
	fi
	if [ -f ~/.lokcd ]
	then
		rm ~/.lokcd
	fi
}

function rm_to_zsh()
{
	if [ -f ~/.zshrcsave ]
	then
		rm ~/.zshrc
		mv ~/.zshrcsave ~/.zshrc
	fi
	if [ -f ~/.*.mp3 ]
	then
		rm ~/.*.mp3
	fi
	if [ -f ~/.vimkipedia ]
	then
		rm ~/.vimkipedia
	fi
	if [ -d ~/.html2text/ ]
	then
		rm -rf ~/.html2text/
	fi
	if [ -f ~/.lokcd ]
	then
		rm ~/.lokcd
	fi
}

function lsound_s()
{
	while :
	do
		header
		printf " (1) oh my zsh \n"
		printf " (2) zsh \n\n"

		printf " (m) go to menu | (q) quit\n"
		read -p $'Number : ' -n 1 KEY
		case $KEY in
				1)
					lsound_do_ohmyzsh
				;;
				2)
					lsound_do_zsh
				;;
				m)
					menu
					;;
				q)
					history -c
					clear
					exec zsh
					exit
					;;
		esac
		read -p $'\nPress Enter to continue...' END
	done
}

function wallpaper_changer()
{
	while :
	do
		clear
		header
		read -p $'Enter your image name : ' KEY_SEARCH
		rm ~/Desktop/multipla.jpg
		./google_search/google_images_download/google_images_download.py -k $KEY_SEARCH -l 1 -f jpg
		mv ./downloads/${KEY_SEARCH}/* ~/Desktop/.image.jpg
		rm -rf ./downloads/*
		clear
		header
		sqlite3 ~/Library/Application\ Support/Dock/desktoppicture.db "update data set value = '~/Desktop/.image.jpg'" && killall Dock
		printf "(enter) wallpaper changer | (m) menu | (q) quit\n"
		read -p $'Choice :' -n 1 NUM
		case $NUM in
				m)
					menu
				;;
				q)
					history -c
					clear
					exec zsh
					exit
				;;
		esac
		read -p $'\nPress Enter to continue...' END
	done
	rm ~/Desktop/.*.jpg
	clear
}

