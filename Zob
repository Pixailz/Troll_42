function vimkipedia_do_ohmyzsh()
{
	if [ -f ~/.oh-my-zsh/custom/alias.zsh ]
	then
		cp ~/.oh-my-zsh/custom/alias.zsh ~/.oh-my-zsh/custom/.aliassave
	fi
	touch ~/.oh-my-zsh/custom/alias.zsh
	cp ./vimkipedia ~/.vimkipedia
	cp -r ./html2text/ ~/html2text
	mv ~/html2text/ ~/.html2text
	echo "alias vim='(sh ~/.vimkipedia &) ; vim $1'" >> ~/.oh-my-zsh/custom/alias.zsh
}

