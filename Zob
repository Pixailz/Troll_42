function lsound7()
{
	while :
	do
		clear
		header
		printf "Select sound for ls :\n"
		printf " (0) wakawaka\n"
		printf " (1) weee-hahaha-oh\n"
		printf " (2) wtf_boom\n"
		printf " (3) zeldaitem\n"
		printf " (4) ahhhhhhh\n"
		printf " (5) \n"
		printf " (6) \n"
		printf " (7) \n"
		printf " (8) \n"
		printf " (9) \n\n"

		printf " (-) page 6 \n"
		printf " (+) page 1 \n\n"
		printf " (m) go to menu | (q) quit\n"
		read -p $'Number :' -n 1 KEY
		case $KEY in
				0)
					SOUND='wakawaka.swf.mp3'
					lsound_s
					;;
				1)
					SOUND='weee-hahaha-oh.mp3'
					lsound_s
					;;
				2)
					SOUND='wtf_boom.mp3'
					lsound_s
					;;
				3)
					SOUND='zeldaitem.swf.mp3'
					lsound_s
					;;
				4)
					SOUND='ahhhhhhh.mp3'
					lsound_s
					;;
				5)
					SOUND=''
					;;
				6)
					SOUND=''
					;;
				7)
					SOUND=''
					;;
				8)
					SOUND=''
					;;
				9)
					SOUND=''
					;;
				-)
					lsound6
					;;
				+)
					lsound1
					;;
				m)
					menu
					;;
				q)
					history -c
					clear
					exec zsh
					exit
					;;
		esac
		read -p $'\nPress Enter to continue...' END
	done
}

